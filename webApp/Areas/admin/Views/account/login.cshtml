@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="renderer" content="webkit" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>后台登录-新智联在线学习考试平台</title>
    <link href="/layui/css/layui.css?v=2.2.4" rel="stylesheet" />
    <link href="/areas/css/global.css?v=2.0.2" rel="stylesheet" />
</head>
<body class="login-bg">
    <div class="login-box">
        <div class="header">
            <h1><a href="/" title="返回首页">新智联后台登录</a></h1>
        </div>
        <div class="login-main">
            <form class="layui-form">
                <div class="layui-form-item">
                    <label class="login-icon"><i class="layui-icon">&#xe612;</i></label>
                    <input type="text" name="account" id="account" required lay-verify="account" placeholder="用户名" autocomplete="off" class="layui-input" />
                </div>
                <div class="layui-form-item">
                    <label class="login-icon"><i class="layui-icon">&#xe642;</i></label>
                    <input type="password" name="pwd" required lay-verify="pwd" placeholder="密码" autocomplete="off" class="layui-input" />
                </div>
                <div class="layui-form-item">
                    <div class="pull-left" style="width: 160px;">
                        <label class="login-icon"><i class="layui-icon">&#xe628;</i></label>
                        <input type="text" name="code" id="code" required lay-verify="code" placeholder="验证码" autocomplete="off" class="layui-input" />
                    </div>
                    <div class="pull-right">
                        <img id="vCodeImg" src="/account/verification?r=1" width="90" height="35" title="点击换一个" style="vertical-align: middle; cursor: pointer;" />
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="layui-form-item">
                    <div class="pull-left login-remember">
                        <label>记住帐号</label>
                        <input type="checkbox" name="remember" lay-skin="switch" lay-text="ON|OFF" />
                    </div>
                    <div class="pull-right">
                        <button class="layui-btn layui-btn-primary" lay-submit lay-filter="loginForm"><i class="layui-icon">&#xe609;</i>&nbsp;&nbsp;登录</button>
                    </div>
                    <div class="clear"></div>
                </div>
            </form>
        </div>
        <div class="footer">
            <p>Copyright &copy; 2017 贵阳新智联科技有限公司 当前版本：2.0.2</p>
        </div>
    </div>
    <script src="//cdn.bootcss.com/jquery/3.2.0/jquery.min.js"></script>
    <script src="/scripts/jquery.cookie.js"></script>
    <script src="/layui/layui.js?v=2.2.4"></script>
    <script src="/areas/admin/js/login.js?v=2.0.2"></script>
</body>
</html>
