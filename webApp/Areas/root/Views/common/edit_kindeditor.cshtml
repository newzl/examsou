<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>kin编辑器</title>
</head>
<body>
    <textarea id="editor" name="content"></textarea>
    <script charset="utf-8" src="~/content/kindeditor/kindeditor-all-min.js"></script>
    <script>
        var editor;
        KindEditor.ready(function (K) {
            editor = K.create('#editor', {
                fullscreenMode:true,
                width: '100%',
                height: '480px',
                resizeType: 1,
                uploadJson: '/handler/root/upload_kindeditor.ashx',
                filterMode: false
            });
        });
        function get(callback) {
            if (!editor.isEmpty()) {
                callback(editor.html());
            }
            else {
                callback(null);
            }
        }
        function set(cont) {
            editor.html(cont);
        }
    </script>
</body>
</html>
