    </div>
    <script src="//cdn.bootcss.com/jquery/3.2.0/jquery.min.js"></script>
    <script src="/layui/layui.js"></script>
    <script>
        layui.use(['layer', 'laytpl', 'carousel'], function () {
            var layer = layui.layer,
                laytpl = layui.laytpl,
                carousel = layui.carousel;
            $.ajax({
                url: '/api/home',
                type: 'get', dataType: 'json', cache: false,
                beforeSend: function () { layer.load(2); },
                success: function (res) {
                    if (res.employee !== null) {
                        laytpl(navUserTpl.innerHTML).render(res.employee, function (htm) {
                            $('#navUserView').html(htm);
                        });
                        laytpl(userInfoTpl.innerHTML).render(res.employee, function (htm) {
                            $('#userInfoView').html(htm);
                        });
                    }
                    laytpl(eduItemTpl.innerHTML).render(res.item, function (htm) {
                        $('#eduItemView').html(htm);
                    });
                    laytpl(doctorTpl.innerHTML).render(res.teacher, function (htm) {
                        $('#doctorView').html(htm);
                    });
                    carousel.render({//图片轮播
                        elem: '#eduCarousel'
                      , width: '100%'
                      , height: '350px'
                      , interval: 5000
                    });
                },
                complete: function () { layer.closeAll('loading'); },
                error: function (msg) { alert('ajaxError:' + msg.responseText); }
            });
        });
    </script>
