@{
    ViewBag.Title = "部门科室，级别职称";
    Layout = "~/Views/_layoutMember.cshtml";
}
<div class="layui-tab layui-tab-brief">
    <ul class="layui-tab-title">
        <li><a href="/profile/messages">我的消息</a></li>
        <li><a href="/profile/core">个人中心</a></li>
        <li class="layui-this">基本资料</li>
        <li><a href="/profile/changepwd">修改密码</a></li>
    </ul>
    <div class="layui-tab-content">
        <div class="layui-tab-item layui-show">
            <form class="layui-form">
                <div class="layui-form-item">
                    <label class="layui-form-label">部门</label>
                    <div class="layui-inline">
                        <select name="bumen" id="bumen" lay-filter="bumen"></select>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">科室</label>
                    <div class="layui-inline">
                        <select name="keshi" id="keshi"></select>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">级别</label>
                    <div class="layui-inline">
                        <select name="jibie" id="jibie" lay-filter="jibie"></select>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">职称</label>
                    <div class="layui-inline">
                        <select name="zhicheng" id="zhicheng"></select>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label"></label>
                    <div class="layui-inline">
                        <button class="layui-btn" lay-submit lay-filter="formbkjz">确定保存</button>
                    </div>
                </div>
                <input type="hidden" id="companyID" value="@ViewBag.companyID" />
            </form>
        </div>
    </div>
</div>
@section js{
<script src="/scripts/member/profile/bkjz.js?v=2.0.2"></script>
}
